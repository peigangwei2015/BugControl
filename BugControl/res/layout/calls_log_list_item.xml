<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_calls_log_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="姓名"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_calls_log_list_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12234354645"
            android:textColor="#000" />
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_calls_log_list_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="时长"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_calls_log_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来电"
            android:textColor="#000" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_calls_log_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="2天前" 
        android:gravity="center"
        android:textColor="#000"/>

</LinearLayout>