<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RadioGroup
        android:id="@+id/rg_cramera_cramera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_front_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="后置摄像头" />

        <RadioButton
            android:id="@+id/rb_back_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前置摄像头" />
    </RadioGroup>
<Button 
    android:id="@+id/bt_camera_capture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/start_but_bg"
    android:text="拍照"/>
    <ImageView
        android:id="@+id/iv_camera_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/bt_camera_save_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/start_but_bg"
        android:text="保存" />

</LinearLayout>